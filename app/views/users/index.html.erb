<h1>User data</h1>

<p id="notice"><%= notice %></p>


<div class="container">
  <div class="d-flex justify-content-between py-2">
    <h3 class="text-center">Jobs</h3>
  </div>

  <table class="table px-2">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Email</th>
        <th scope="col">Show</th>
        <th scope="col">Edit</th>
        <th scope="col">Destroy</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Show', user, class: "btn btn-primary text-white" %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger text-white" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>


<%= button_to "logout", destroy_user_session_path, method: :delete %>



